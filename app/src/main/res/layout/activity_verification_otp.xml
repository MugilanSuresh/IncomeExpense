<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical"
    tools:context=".Activity.VerificationOtp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textSize="48dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="460dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="28dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="VERIFICATION"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="@string/otp_text"
                android:textColor="@color/black" />
            <View
                android:layout_width="96dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="26dp"
                android:background="#00FF94"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">
                <EditText
                    android:id="@+id/otp_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/stroke_editbox"/>
                <EditText
                    android:id="@+id/otp_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/stroke_editbox"/>
                <EditText
                    android:id="@+id/otp_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/stroke_editbox"/>
                <EditText
                    android:id="@+id/otp_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/stroke_editbox"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timer_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend code in "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="@color/app_color"
                    android:layout_marginStart="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sec"
                    android:textColor="@color/app_color"
                    android:layout_marginStart="4dp"

                    />
            </LinearLayout>
            <TextView
                android:id="@+id/resend_otphide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Resend OTP"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:visibility="gone"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/change_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Mobile Number?"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"/>

            <Button
                android:id="@+id/otp_button"
                android:layout_width="198dp"
                android:layout_height="58dp"
                android:backgroundTint="@color/app_color"
                android:layout_marginTop="60dp"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:text="verify otp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>